package com.aurionpro.ocp.voilation.model;

public class FixedDeposit {
	private Integer accountNumber;
	private String name;
	private Double principal;
	private Integer duration;
	private FestivalType festival;
	public FixedDeposit(Integer accountNumber, String name, Double principal,Integer duration, FestivalType festival) {
		super();
		this.accountNumber = accountNumber;
		this.name = name;
		this.principal = principal;
		this.duration = duration;
		this.festival = festival;
	}
	public Integer getAccountNumber() {
		return accountNumber;
	}
	public void setAccountNumber(Integer accountNumber) {
		this.accountNumber = accountNumber;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Double getPrincipal() {
		return principal;
	}
	public void setPrincipal(Double principal) {
		this.principal = principal;
	}
	public FestivalType getFestival() {
		return festival;
	}
	public void setFestival(FestivalType festival) {
		this.festival = festival;
	}
	
	@SuppressWarnings("unused")
	private Double getInterestRate(FestivalType festival) {
		switch (festival) {
		case NEWYEAR:
			return 8.0;
		case DIWALI:
			return 8.5;
		case HOLI:
			return 7.5;
		case OTHERS:
			return 6.5;
		}
	}
	
	public Double calculateSimpleIntreastRate() {
		return (principal*duration*getInterestRate(festival))/100;
		
	}
	
}
